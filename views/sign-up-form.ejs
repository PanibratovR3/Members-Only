<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Sign Up</title>
    </head>
    <body>
        <h1>Sign Up</h1>
        <ul>
            <% if (locals.errors) { %>
                <% errors.forEach((error) => { %>
                    <li><%= error.msg %></li>
                <% }); %>
            <% }; %>
        </ul>
        <div>
            <form action="/sign-up" method="POST">
                <div>
                    <label for="first-name">First name:</label>
                    <input type="text" name="firstName" id="first-name" placeholder="John" maxlength="10" required />
                </div>
                <div>
                    <label for="last-name">Last name:</label>
                    <input type="text" name="lastName" id="last-name" placeholder="Doe" maxlength="10" required />
                </div>
                <div>
                    <label for="username">Username:</label>
                    <input type="email" name="username" id="username" placeholder="jdoe@mail.com" required />
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" name="password" id="password" required />
                </div>
                <div>
                    <label for="confirm-password">Confirm password:</label>
                    <input type="password" name="confirmPassword" id="confirm-password" required />
                </div>
                <div>
                    <input type="checkbox" name="isAdmin" id="is-admin" />
                    <label for="is-admin">I want to be an admin</label>
                </div>
                <div>
                    <button type="submit">Sign up</button>
                </div>
            </form>
        </div>
    </body>
</html>